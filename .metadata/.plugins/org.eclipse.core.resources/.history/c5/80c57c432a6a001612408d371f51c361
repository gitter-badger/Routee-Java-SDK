package net.routee.messaging;

public class Message {

	private String from;
	private String body;
	private String to;
	private boolean flash;
	private String label;
	Callback callback;
	
	public Message(String from,String body,String to){
		this.setFrom(from);
		this.setBody(body);
		this.setTo(to);
	}
	
	public Message(String from, String body, String to,boolean flash,String label,Callback callback){
		this.setFrom(from);
		this.setBody(body);
		this.setTo(to);
		this.setFlash(flash);
		this.setLabel(label);
		this.callback = callback;
		
	}

	public String getFrom() {
		return from;
	}

	public void setFrom(String from) {
		this.from = from;
	}

	public String getBody() {
		return body;
	}

	public void setBody(String body) {
		this.body = body;
	}

	public String getTo() {
		return to;
	}

	public void setTo(String to) {
		this.to = to;
	}

	public boolean isFlash() {
		return flash;
	}

	public void setFlash(boolean flash) {
		this.flash = flash;
	}

	public String getLabel() {
		return label;
	}

	public void setLabel(String label) {
		this.label = label;
	}
	
	
	
}
